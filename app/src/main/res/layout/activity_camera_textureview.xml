<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <org.tensorflow.lite.examples.objectdetection.cameraone.CameraTextureView
        android:id="@+id/texture_view"
        android:layout_width="1600dp"
        android:layout_height="1200dp" />


    <org.tensorflow.lite.examples.objectdetection.draw.AiFoodRectDrawView
        android:id="@+id/overlay"
        android:layout_width="1600dp"
        android:layout_height="1200dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="111"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/tv_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="识别阈值"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/tv_thread_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="识别线程"
            android:textColor="@android:color/holo_green_light"/>
    </LinearLayout>




</FrameLayout>
